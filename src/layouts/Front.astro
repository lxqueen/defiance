---
import Footer from "@/components/shell/Footer.astro";
import Header from "@/components/shell/Header.astro";
import { default as BaseLayout, type Props as BaseProps } from "./Base.astro";

interface Props extends BaseProps {}

const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
	<Header />

	<main>
		<slot />
	</main>

	<Footer />
</BaseLayout>

<style>
	body > main {
		padding-block: 0 var(--wa-space-3xl);
		gap: var(--wa-space-3xl);

		> * {
			margin-block: 0;
		}
	}
</style>
